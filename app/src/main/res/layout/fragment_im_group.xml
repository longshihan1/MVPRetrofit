<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.longshihan.mvpretrofit.fragment.im.ImGroupFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/application_newfriend"
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/xinpengyou"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="新的朋友"
            />

        <TextView
            android:id="@+id/application_attention"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/tebieguanxin"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:text="特别关心"
            />

        <TextView
            android:id="@+id/application_gongzhong"
            android:layout_width="0dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/gongzhonghao"
            android:gravity="center"
            android:drawablePadding="8dp"
            android:text="公众号"
            />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/im_group_expand"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ExpandableListView>

</LinearLayout>
