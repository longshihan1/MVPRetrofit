<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/application_newfriend"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/xinpengyou"
        android:text="新的朋友"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/application_attention"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/tebieguanxin"
        android:text="特别关心"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/application_gongzhong"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/gongzhonghao"
        android:text="公众号"
        android:gravity="center"
        />
</LinearLayout>