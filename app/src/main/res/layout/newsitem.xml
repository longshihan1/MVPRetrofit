<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="16dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <ImageView
            android:id="@+id/newsitem_image"
            android:layout_width="80dp"
            android:layout_height="80dp"/>

        <TextView
            android:id="@+id/newsitem_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/newsitem_source"
            android:layout_alignBottom="@+id/newsitem_source"
            android:layout_marginStart="39dp"

            android:layout_toEndOf="@+id/newsitem_source"
            android:text="时间"/>

        <TextView
            android:id="@+id/newsitem_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/newsitem_image"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_toEndOf="@+id/newsitem_image"
            android:text="来源wwwwwwww"/>

        <TextView
            android:id="@+id/newsitem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/newsitem_source"
            android:layout_alignTop="@+id/newsitem_image"
            android:layout_marginTop="10dp"
            android:text="标题wwwwwwww"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>
