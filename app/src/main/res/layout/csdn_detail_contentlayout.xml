<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/csdn_tag_detailcontent_linear"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/csdn_tag_detailcontent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ssss"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/csdn_tag_detailcontent_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ssss"
        android:textSize="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/csdn_tag_detailcontent_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/csdn_tag_detailcontent_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="wwwww"/>
    </LinearLayout>

</LinearLayout>
